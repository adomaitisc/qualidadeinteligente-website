---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class=" border border-zinc-800 rounded-xl h-40 text-white list-none p-6">
	<a href={href}>
		<h2 class="text-xl">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="text-zinc-400 font-light mt-2">
			{body}
		</p>
	</a>
</li>
